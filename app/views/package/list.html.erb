<% if @packages.blank? %>
<p>There are not any packages currently in the system.</p>
<% else %>

<ul id = "packages">
   <% @packages.each do |c| %>
    <li>
    <%= link_to c.tracking_number, {:action => 'show', :id => c.id} -%>
    <b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
    <b> <%= link_to "Delete", {:action => 'delete', :id => c.id}, :confirm => "Are you sure you want to delete this item?" %></b>
 </li>
   <% end %>
</ul>


<% end %>
<p><%= link_to "Add new Package", {:action => 'new' }%></p>