<h1>Edit Package Detail</h1>

<%= form_for @package, :url =>{:action => "update", :id =>@package} do |f| %>

<p>Tracking_number: <%= f.text_field 'tracking_number`' %></p>
<p>Delivery_status: <%= f.text_field  'delivery_status' %></p>
<p>Courier: <%= f.collection_select :courier_id, Courier.all, :id, :name, :email %></p>
<%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {:action => 'list' } %>