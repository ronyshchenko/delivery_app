<% if @couriers.blank? %>
<p>There are not any couriers currently in the system.</p>
<% else %>
<p>These are the current couriers in our system</p>

<ul id = "couriers">
<% Courier.all.each do |c| %>
    <li>
    <%= link_to c.name, {:action => 'show_courier', :id => c.id} -%>
    <b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
    <b> <%= link_to "Delete", {:action => 'delete', :id => c.id}, :confirm => "Are you sure you want to delete this item?" %></b>
 </li>
   <% end %>
</ul>


<% end %>
<p><%= link_to "Add new Courier", {:action => 'new' }%></p>